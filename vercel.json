{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "pnpm build --filter=todo-web",
  "outputDirectory": "apps/todo-web/.next",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "functions": {
    "apps/todo-web/src/app/**/*.tsx": {
      "runtime": "nodejs22.x"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/apps/todo-web/$1"
    }
  ],
  "env": {
    "TURBO_TOKEN": "@turbo_token",
    "TURBO_TEAM": "@turbo_team"
  }
}
